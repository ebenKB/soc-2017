 <%include ../partials/header%>

<div class="container">
  <div class="row">
    <div class="col-md-12">

        <% games.forEach(function(game){%>
          <div class="well">
            <h3 align="center">LEAGUE TABLE FOR&emsp;<%=game.name.toUpperCase()%></h3>
          </div>
          <table align="center">
            <thead>
              <th>TEAM</th>
              <th>COACH</th>
              <th>GOALS FOR</th>
              <th>GOALS AGAINST</th>
              <th>MATCHED PLAYED</th>
              <th>MATCHES WON</th>
              <th>MATCHES DRAWN</th>
              <th>POINTS</th>

            </thead>
            <tbody>
              <% teams.forEach(function(team){%>
                  <%if(team.category==game.name){%>
                    <tr>
                      <td><%=team.name%></td>
                      <td><%=team.coachName%></td>
                      <td><%=team.goal_for%></td>
                      <td><%=team.goal_against%></td>
                      <td><%=team.matches_played%></td>
                      <td><%=team.matches_won%></td>
                      <td><%=team.matches_draw%></td>
                      <td><%=team.points%></td>
                    </tr>
                  <%}%>
              <%})%>
            </tbody>
          </table>
      <% })%>

    </div>
  </div>
  <%if(currentUser.isAdmin==1){ %>
    <div class="caption" display="inline">
      <a href="/soc_2017/com/admin" class="btn btn-danger btn-sm">Go to Admin Control Panel</a>
    </div>
  <%}%>
</div>
  <%include ../partials/footer%>
