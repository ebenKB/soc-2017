<% include ../partials/header %>

<div class="container-fluid" id="commentsContainer">
  <div class="row">
    <div class="col-md-3 col-xs-12">
      <div class="thumbnail">
        <img src="/images/<%=post.image%>" alt="">
        <p><em>Posted by: <%=post.author.username%></em></p>
        <p><em>Time: </em></p>
      </div>
    </div>
    <div class="col-md-9 col-xs-9">
      <% post.comments.forEach(function(foundComment){ %>
              <div class="row">
                <div class="col-md-1 col-xs-3">
                  <img id="loginThumbnail"src="/images/currentUser.image" alt="">
                  <em><b><%=foundComment.author.username%></b></em>
                </div>
                <div class="col-md-8 col-xs-6">
                  <div class="caption" id="chatMsgs">
                       <li type="none" ><strong><%= foundComment.text %></strong></li>
                  </div>
                </div>
              </div>

        <% }) %>
    </div>
    <div class="col-md-9 col-xs-12">
        <h5 style="text-align: center">Add New Comment to <%=post.title%></h5>
        <div class="newCommentContainer">
            <form action="/posts/<%= post._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="Enter your comment here" name="comment" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/posts">Go Back</a>
        </div>

    </div>
  </div>
  <center><% include ../partials/footer %></center>
</div>
