<% include ../partials/header %>
<div class="container ">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="jumbotron">
          <h4 style="text-align: center">Add a New Post</h4>
          <center>
          <div class="loginForm">
              <form ref='uploadForm' action="/posts" method="POST" enctype="multipart/form-data">
                  <div class="form-group">
                      <input class="form-control" type="text" name="title" placeholder="Enter the title of the post">
                  </div>
                  <div class="form-group">
                      <textarea name="description" rows="4"  placeholder="Enter the description here"></textarea>
                  </div>
                  <div class="form-group">
                      <input class="form-control" type="file" name="image" placeholder="image url">
                  </div>
                  <div class="form-group">
                      <button class="btn btn-xs btn-primary btn-block">Submit!</button>
                  </div>
              </form>
              <a href="/posts">Go Back</a>
          </div>
        </center>
        </div>
      </div>
    </div>
    <% include ../partials/footer %>
</div>
